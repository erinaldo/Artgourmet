<UserControl x:Class="Artebit.Restaurante.AtendimentoPDV.Controles.Cabecalho1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="CabecalhoSistema"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Height="110" Background="Transparent">
    <Grid>
        <!-- Primeira linha, titulo -->
        <!-- Titulo -->
        <Grid Grid.ColumnSpan="2" Grid.RowSpan="2" Height="80" Margin="-5 0 -9 0" VerticalAlignment="Center">
            <Grid.Background>
                <ImageBrush ImageSource="/AtendimentoPDV;component/Img/fundoTopoWPF.png" Stretch="Fill" />
            </Grid.Background>

            <WrapPanel VerticalAlignment="Center">

                <Image Source="../Img/logo1.png" HorizontalAlignment="Left" Margin="5 0 0 0" VerticalAlignment="Center"
                       Height="55" />

                <Label x:Name="TituloSistema" Content="{Binding ElementName=CabecalhoSistema, Path=Titulo}"
                       Foreground="White" FontSize="30" FontFamily="Segoe UI" Width="590" HorizontalAlignment="Left" Margin="10 0 0 0"
                       VerticalAlignment="Center" />

            </WrapPanel>

        </Grid>

    </Grid>
</UserControl>