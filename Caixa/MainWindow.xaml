        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="Artebit.Restaurante.Caixa.MainWindow"
        Title="MainWindow" ShowInTaskbar="True" WindowStyle="None"  WindowState="Maximized" Background="GhostWhite">
    <telerik:RadBusyIndicator x:Name="busyIndicator" IsBusy="False" BusyContent="Processando..." DisplayAfter="0">
        <StackPanel HorizontalAlignment="Center" Height="768" VerticalAlignment="Top" MinWidth="1024">
            <Frame x:Name="principal" Height="768" Source="Login.xaml" />
            <Label x:Name="TituloSistema"></Label>
            <StackPanel.Background>
                <ImageBrush ImageSource="/Img/imagemFundo.png" />
            </StackPanel.Background>
        </StackPanel>
    </telerik:RadBusyIndicator>
</Window>